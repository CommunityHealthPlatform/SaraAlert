<% content_for :assets do %>
  <%= javascript_pack_tag "datatables" %>
  <%= javascript_pack_tag "xss" %>
  <%= javascript_pack_tag "moment" %>
<% end %>
<%= render partial: "layouts/breadcrumb", locals: { jurisdiction_path: current_user.jurisdiction_path, crumbs: [ {value: "Exposure Dashboard", href: nil} ] } %>

<div class="btn-group">

  <% if current_user.can_view_analytics? %>
    <%= link_to '<i class="fas fa-chart-pie"></i> Analytics'.html_safe, {controller: "analytics", action: "index"}, class: "btn btn-primary btn-square ml-2 mb-4" %>
  <% end %>

  <% if current_user.can_create_patient? %>
    <%= link_to '<i class="fas fa-plus-square"></i> Enroll New Monitoree'.html_safe, {controller: "patients", action: "new"}, class: "btn btn-primary btn-square ml-2 mb-4" %>
  <% end %>

  <% if current_user.can_export? %>
    <%= react_component("export/Export", { authenticity_token: form_authenticity_token, workflow: 'exposure' } ) %>
  <% end %>

  <% if current_user.can_import? %>
    <div class="">
      <button type="button" class="btn btn-primary mb-4 ml-2 dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" >
        <i class="fas fa-upload"></i> Import
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" data-toggle="modal" data-target="#epixModal">Epi-X</a>
        <a class="dropdown-item" data-toggle="modal" data-target="#compModal">Sara Alert Format</a>
      </div>
    </div>
    <div class="modal fade" id="epixModal" tabindex="-1" role="dialog" aria-labelledby="epixModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="epixModalLabel">Import Epi-X</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= form_tag(ADMIN_OPTIONS['base_path'] + '/import/exposure/epix', method: :post, multipart: true) do |f| %>
              <%= file_field_tag 'file' %>
              <%= submit_tag "Upload", class: "btn btn-primary float-right" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade" id="compModal" tabindex="-1" role="dialog" aria-labelledby="compModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="compModalLabel">Import Sara Alert Format</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= link_to 'Download formatting guidance', 'https://github.com/SaraAlert/SaraAlert/blob/master/public/Sara%20Alert%20Import%20Format.xlsx?raw=true' %>
            <div class="mb-3"></div>
            <%= form_tag(ADMIN_OPTIONS['base_path'] + '/import/exposure/comprehensive_monitorees', method: :post, multipart: true) do |f| %>
              <%= file_field_tag 'file' %>
              <%= submit_tag "Upload", class: "btn btn-primary float-right" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>

<div class="btn-group mb-4 float-right mr-2" role="group">
  <a class="btn btn-primary" href="<%= public_health_url %>"><i class="fas fa-people-arrows"></i> Exposure Monitoring (<%= @all_count %>)</a>
  <a class="btn btn-outline-primary" href="<%= public_health_isolation_url %>"><i class="fas fa-house-user"></i> Isolation Monitoring (<%= @i_all_count %>)</a>
</div>

<%= react_component("public_health/PatientsTable", {
  workflow: 'exposure',
  tabs: [
    { name: 'symptomatic', label: 'Symptomatic', total: @symptomatic_count, variant: 'danger',
      description: 'Monitorees who have reported symptoms, which need to be reviewed.', tooltip: 'exposure_symptomatic' },
    { name: 'non_reporting', label: 'Non-Reporting', total: @non_reporting_count, variant: 'warning',
      description: 'Monitorees who have failed to report in the last day, and are not symptomatic.', tooltip: 'exposure_nonReporting' },
    { name: 'asymptomatic', label: 'Asymptomatic', total: @asymptomatic_count, variant: 'success',
      description: 'Monitorees currently reporting no symptoms, who have reported during the last day.', tooltip: 'exposure_asymptomatic' },
    { name: 'pui', label: 'PUI', total: @pui_count, variant: 'dark',
      description: 'Monitorees who are currently under investigation.', tooltip: 'exposure_under_investigation' },
    { name: 'closed', label: 'Closed', total: @closed_count, variant: 'secondary',
      description: 'Monitorees not currently being monitored.', tooltip: 'exposure_closed' },
    { name: 'transferred_in', label: 'Transferred In', total: @transferred_in_count, variant: 'info',
      description: 'Monitorees that have been transferred into this jurisdiction during the last 24 hours.' },
    { name: 'transferred_out', label: 'Transferred Out', total: @transferred_out_count, variant: 'info',
      description: 'Monitorees that have been transferred out of this jurisdiction.' },
    { name: 'all', label: 'All Cases', total: @all_count, variant: 'primary',
      description: 'All Monitorees in this jurisdiction, in the Exposure workflow.' }
  ]
}) %>
